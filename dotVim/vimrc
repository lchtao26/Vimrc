" =================== Keys Mapping
" Ale Fix
nnoremap <Leader>af :ALEFix<CR>

noremap <Leader>cp :let @+ = expand("%:p")<CR>
noremap <Leader>so :source $MYVIMRC<CR>

cnoremap ;; <C-R>=fnameescape(expand('%:p:h')).'/'<CR>
cnoremap :: <C-R>=projectroot#guess().'/'<CR>

